@using UI_MVC.Common
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>锁屏</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    @Html.Partial("~/Views/Sys/IncludeStylesPart.cshtml")
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="@(Config.ResourcePath)css/lock.css?Version=@(Config.Version)" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
</head>
<body>
    <div class="page-lock">
        <div class="page-logo">
            <a class="brand" href="~/Home/page.html">
                <img src="@(Config.ResourcePath)image/logo-big.png" alt="logo" />
            </a>
        </div>
        <div class="page-body">
            <img class="page-lock-img" src="@(Config.ResourcePath)image/profile.jpg" alt="">
            <div class="page-lock-info">
                <h1>@ViewBag.UserName</h1>
                <span>@ViewBag.UserEmail</span>
                <span><em>Locked</em></span>
                <form class="form-search form-unlock" action="~/User/Login.html" method="post">

                    <span class="label label-important lab-error" style="width:60px;line-height:17px;display:none">密码错误</span>
                    <div class="input-append">
                        <input type="text" name="password" class="m-wrap" placeholder="Password">
                        <input type="hidden" name="userName" value="@(ViewBag.UserName)" />
                        <button type="submit" class="btn blue icn-only"><i class="m-icon-swapright m-icon-white"></i></button>
                    </div>
                    <div class="relogin">
                        <a href="~/User/Logout.html">不是@(ViewBag.UserName) ?</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="page-footer">
            2013 &copy; Metronic. Admin Dashboard Template.
        </div>
    </div>

    <!-- BEGIN JAVASCRIPTS -->
    @Html.Partial("~/Views/Sys/IncludeJavaSciptPart.cshtml")
    <script src="@(Config.ResourcePath)js/jquery.backstretch.min.js?Version=@(Config.Version)" type="text/javascript"></script>
    <script src="@(Config.ResourcePath)js/app.js?Version=@(Config.Version)"></script>
    <script src="@(Config.ResourcePath)js/lock.js?Version=@(Config.Version)"></script>

    <script>
        jQuery(document).ready(function () {
            App.init();
            Lock.init();
        });
        function unlock() {
            window.location.href = "@ViewBag.BackUrl";
        }
    </script>

    <!-- END JAVASCRIPTS -->
</body>
</html>
